<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/rv_grid"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/img_profil_grid"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                tools:src="@color/colorAccent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btn_favorite_circle"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="155dp"
                android:layout_marginLeft="12dp"
                tools:src="@android:color/white" />

            <ImageButton
                android:id="@+id/btn_favorite_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="162dp"
                android:layout_marginLeft="17dp"
                android:background="@android:color/transparent"
                tools:src="@drawable/btn_favorite"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>



    <TextView
        android:id="@+id/name_destination_grid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Jawa Timur"
        android:textSize="15sp"
        android:textColor="@color/colorNavBar"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="sans-serif-black"/>

</LinearLayout>